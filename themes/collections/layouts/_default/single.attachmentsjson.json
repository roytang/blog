[{{ $scratch := newScratch }}{{ $fileDir := .File.Dir }}{{ with .Resources.ByType "image" }}{{ range . }}{{ $scratch.Set "thumbnail" (.Resize "300x") }}{{ $thumb := $scratch.Get "thumbnail" }}
    {
        "main": {{ .RelPermalink | jsonify }},
        "thumbnail": {{ $thumb.RelPermalink | jsonify }},
        "title": {{ .Title | jsonify }},
        "name": {{ .Name | jsonify }},
        "sourcepath": {{ $fileDir | jsonify }}
    },{{ end }}{{ end }}    
    "End of file"
]